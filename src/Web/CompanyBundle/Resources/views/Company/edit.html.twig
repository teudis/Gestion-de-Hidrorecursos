{% extends "::frontend.html.twig" %}

{% block id 'editar' %}
{% block title %}Modificar Empresa{% endblock %}
{% block nav %}
{% include ':includes:destacada.html.twig' %}
{% endblock%}
{% block article %}
<div class="portada">
{% if app.session.hasFlash('info') %}
 <p class="btn btn-success">{{ app.session.getFlash('info') }}</p>
 {% endif %} 
 
<div class="navbar">
    <div class="navbar-inner">
        <ul class="nav">
            <li><a href="{{ path('WebCompanyBundle_listado_company') }}"><i class="icon-list"></i> View List</a></li>
            <li><a href="{{ path('WebCompanyBundle_delete_company', { 'id': entity.id }) }}">
                    <i class="icon-remove"></i>Delete
                </a>
            </li>
        </ul>
    </div>
 </div>
 
<form action="{{ path('WebCompanyBundle_update_company', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
   <fieldset>
            <legend>{% trans %}Datos de la Empresa{% endtrans %}</legend>
            
            {{ form_row(edit_form.name) }}
            {{ form_row(edit_form.country) }}
            <div class="row-fluid">
                <div class="span2" style="width: 140px;"><strong>{{ form_label(edit_form.created, 'Fecha de creada') }}</strong></div>                
                <div class="span6"><span>{{ form_widget(edit_form.created) }}</span></div>
            </div>


            {{ form_row(edit_form.description) }}
            {{ form_row(edit_form.address) }}
            {{ form_row(edit_form.typeofproducts) }}
        </fieldset>
        <fieldset>
            <legend>{% trans %}Contacto{% endtrans %}</legend>
            {{ form_row(edit_form.email) }}
            {{ form_row(edit_form.web_site) }}
        </fieldset>
        
        
        {{ form_rest(edit_form) }}  


{#{ form_widget(edit_form) }#}
    <p>
        <button class="btn btn-primary" type="submit">{% trans %}Guardar cambios{% endtrans %}</button>
    </p>
</form>
    </div>
{% endblock %}

 {% block javascripts %}
<script type="text/javascript">
    //    $('select').click(function(){alert('testing...')});
        
          $("#web_companybundle_companytype_created_day").addClass("input-mini");
          $("#web_companybundle_companytype_created_month").addClass("input-mini");
          $("#web_companybundle_companytype_created_year").addClass("input-small");
   

</script>
{% endblock %}